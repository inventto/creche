<%- model_class = Matricula -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:aluno_id) %></th>
      <th><%= model_class.human_attribute_name(:turma_id) %></th>
      <th><%= model_class.human_attribute_name(:ano_letivo) %></th>
      <th><%= model_class.human_attribute_name(:data) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @matriculas.each do |matricula| %>
      <tr>
        <td><%= link_to matricula.id, matricula_path(matricula) %></td>
        <td><%= link_to(matricula.aluno, alunos_path(matricula.aluno)) %></td>
        <td><%= link_to(matricula.turma, turmas_path(matricula.turma)) %></td>
        <td><%= matricula.ano_letivo %></td>
        <td><%= matricula.data %></td>
        <td><%=l matricula.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_matricula_path(matricula), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      matricula_path(matricula),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_matricula_path,
            :class => 'btn btn-primary' %>
