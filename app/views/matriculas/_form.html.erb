<%= form_for @matricula, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :aluno_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:aluno_id, Aluno.sem_matricula.collect {|p| [ p.nome, p.id ] },  include_blank: true ) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :turma_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :turma_id, Turma.all.collect {|p| [ p.nome, p.id ] }, { include_blank: true }  %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ano_letivo, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :ano_letivo, (Time.now.year..(Time.now.year + 2)).to_a %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :data, :class => 'control-label' %>
    <div class="controls">
      <div id="calendar_data" class="input-append date">
      <%= f.text_field :data, "data-format" => "dd/MM/yyyy", class: "text-field"  %>
       <span class="add-on"><i data-time-icon="icon-time" data-date-icon="icon-calendar"></i></span>
       </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                matriculas_path, :class => 'btn' %>
  </div>
<% end %>
