<%- model_class = Matricula -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:aluno_id) %>:</strong></dt>
  <dd><%= @matricula.aluno %></dd>
  <dt><strong><%= model_class.human_attribute_name(:turma_id) %>:</strong></dt>
  <dd><%= @matricula.turma %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ano_letivo) %>:</strong></dt>
  <dd><%= @matricula.ano_letivo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data) %>:</strong></dt>
  <dd><%= @matricula.data %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              matriculas_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_matricula_path(@matricula), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              matricula_path(@matricula),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
