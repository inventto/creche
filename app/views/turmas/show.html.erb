<%- model_class = Turma -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @turma.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:professora) %>:</strong></dt>
  <dd><%= @turma.professora %></dd>
  <dt><strong><%= model_class.human_attribute_name(:professora_auxiliar) %>:</strong></dt>
  <dd><%= @turma.professora_auxiliar %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              turmas_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_turma_path(@turma), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              turma_path(@turma),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
